{
  "name": "n8n-electron",
  "version": "1.0.0",
  "description": "Electron app to run n8n with Docker",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "npm run build:mac && npm run build:win"
  },
  "keywords": [
    "n8n",
    "docker",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.n8n.electron",
    "productName": "n8n Docker Manager",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "src/**/*",
      "docker-compose.yml",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*"
    ]
  }
}

